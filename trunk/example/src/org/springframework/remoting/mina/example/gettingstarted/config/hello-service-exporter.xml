<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	
	<bean class="org.springframework.remoting.mina.MinaServiceExporter">
		<property name="ioAcceptor" ref="ioAcceptor" />
		<property name="service" ref="helloService" />
		<property name="serviceInterface" value="org.springframework.remoting.mina.example.gettingstarted.HelloService" />
	</bean>
	
	<bean id="ioAcceptor" class="org.springframework.remoting.mina.NioSocketAcceptorFactoryBean" />
	
	<bean id="helloService" class="org.springframework.remoting.mina.example.gettingstarted.DefaultHelloService" />
		
</beans>
